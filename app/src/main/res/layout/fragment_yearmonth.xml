<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yearmonth_background"
    android:clickable="true"
    tools:context=".YearmonthFragment"
    android:focusable="true">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/edt_year"
        android:layout_width="269dp"
        android:layout_height="42dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="307dp"
        android:layout_marginEnd="64dp"
        android:ems="4"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/edt_month"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/edt_month"
        android:layout_width="269dp"
        android:layout_height="41dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="64dp"
        android:ems="2"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_year"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <LinearLayout
        android:layout_width="291dp"
        android:layout_height="46dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="61dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_month"
        tools:visibility="invisible">

        <Button
            android:id="@+id/btn_ymres"
            android:layout_width="107dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_marginStart="80dp"
            android:background="@drawable/yearmonth_background"
            tools:visibility="invisible" />

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:visibility="invisible"></LinearLayout>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="107dp"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:layout_marginStart="94dp"
            android:layout_marginEnd="80dp"
            tools:visibility="invisible" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>