<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodoeditFragment">

    <FrameLayout
        android:layout_width="301dp"
        android:layout_height="315dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.547">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="312dp"
            android:src="@drawable/todoedit_frg" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/txt_editdate"
                android:layout_width="115dp"
                android:layout_height="35dp"
                android:layout_marginStart="84dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="130dp"
                android:ems="10"
                android:inputType="date"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_edittitle" />

            <TextView
                android:id="@+id/txt_edittitle"
                android:layout_width="226dp"
                android:layout_height="27dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="invisible" />

            <EditText
                android:id="@+id/txt_timestart"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_editdate"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
                tools:visibility="invisible" />

            <EditText
                android:id="@+id/txt_timeend"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="111dp"
                android:ems="10"
                android:inputType="time"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_timestart"
                app:layout_constraintTop_toBottomOf="@+id/txt_editdate"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck"
                tools:visibility="invisible" />

            <TextView
                android:id="@+id/txt_note"
                android:layout_width="192dp"
                android:layout_height="16dp"
                android:layout_marginStart="78dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="31dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_timeend"
                tools:visibility="invisible" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="66dp"
                android:layout_height="33dp"
                android:layout_marginStart="74dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="invisible" />

            <Button
                android:id="@+id/btn_cancle"
                android:layout_width="66dp"
                android:layout_height="33dp"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="72dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_save"
                tools:visibility="invisible" />

            <CheckBox
                android:id="@+id/check_allday"
                android:layout_width="87dp"
                android:layout_height="32dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="8dp"
                android:text="All day"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/txt_note"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_timeend"
                app:layout_constraintTop_toBottomOf="@+id/txt_editdate"
                tools:ignore="TouchTargetSizeCheck"
                tools:visibility="visible" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>